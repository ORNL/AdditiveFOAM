FoamFile
{
    version         2;
    format          ascii;
    class           dictionary;
    location        "system";
    object          controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     additiveFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.0042;

deltaT          1e-07;

writeControl    adjustableRunTime;

writeInterval   0.0014;

purgeWrite      0;

writeFormat     binary;

writePrecision  8;

writeCompression off;

timeFormat      general;

timePrecision   8;

runTimeModifiable yes;

adjustTimeStep  yes;

maxCo           0.5;

maxDi           10;

maxAlphaCo      1;

functions
{
    #ifeq ${ENABLE_SOLIDIFICATION_DATA} true
        solidificationData
        {
            libs ("libadditiveFoamFunctionObjects.so");
            
            type solidificationData;
                    
            box         (-1 -1 -1) (1 1 1);
            isoValue    1620;
        }
    #endif;

    #ifeq ${ENABLE_EXACA_DATA} true
        ExaCA
        {
            libs ("libadditiveFoamFunctionObjects.so");
            
            type ExaCA;
                    
            box         (0.0005 -0.00025 -0.0002) (0.0015 0.00025 0);
            dx          2.5e-6;
            isoValue    1620;
        }
    #endif;
}

// ************************************************************************* //
