FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    "(bottom|left|right)"
    {
        type            noSlip;
    }

    top
    {
        type            marangoni;
        dSigmadT        -8e-5;
        value           uniform (0 0 0);
    }
}

