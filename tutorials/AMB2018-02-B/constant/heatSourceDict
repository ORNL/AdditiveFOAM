FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      heatSourceProperties;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

sources (beam);

beam
{
    pathName            scanPath;    

    absorptionModel     constant;
    
    constantCoeffs
    {
        eta             0.3;
    }
    
    heatSourceModel     superGaussian;
    
    superGaussianCoeffs
    {
        k               2.0;
        dimensions      (85.0e-6 85.0e-6 30e-6);
        nPoints         (10 10 10);
    }
}

refinementControl
{
    refine                  true;
    nLevels                 2;
    
    resolveTail             false;//true;
    persistence             1e-4;
    
    //refinementController    none;
    refinementController    uniformIntervals;
    
    uniformIntervalsCoeffs
    {
        intervals   10;
    }
}

