FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      decomposeParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

numberOfSubdomains 2;

// Use Scotch for non-AMR cases
//decomposer      scotch;

// Use hierarchical decomposition with Zoltan load balancing for AMR cases
// Note: must have OF compiled with Zoltan
decomposer      hierarchical;
distributor     zoltan;
libs            ("libzoltanDecomp.so");

hierarchicalCoeffs
{
    n               (2 1 1);
    order           xyz;
}

zoltanCoeffs
{
    lb_method       rcb;
    lb_approach     repartition;
}

constraints
{
   refinementHistory
   {
       //- Decompose cells such that all cell originating from single cell
       //  end up on same processor
       type    refinementHistory;
   }
}


